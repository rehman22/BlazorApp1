<!-- CustomerEdit.razor -->
@page "/EditCustomer/{customerId:int}"
@using BlazorApp1.Models
@using BlazorApp1.Services
@inject CustomerService CustomerService
@inject NavigationManager NavigationManager

<h3>Edit Customer</h3>

@if (customer != null)
{
    <div class="row mb-3">
        <div class="col-md-4">
            <label for="customerName" class="form-label">Customer Name:</label>
            <input type="text" class="form-control" @bind="customer.CustomerName" />
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-md-4">
            <label for="cnic" class="form-label">CNIC:</label>
            <input type="text" class="form-control" @bind="customer.CNIC" />
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-md-4">
            <label for="fatherName" class="form-label">Father Name:</label>
            <input type="text" class="form-control" @bind="customer.FatherName" />
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-md-4">
            <label for="cellNo" class="form-label">Cell No:</label>
            <input type="text" class="form-control" @bind="customer.CellNo" />
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-md-4">
            <label for="address" class="form-label">Address:</label>
            <input type="text" class="form-control" @bind="customer.Address" />
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-md-4">
            <label for="accountNo" class="form-label">Account No:</label>
            <input type="text" class="form-control" @bind="customer.AccountNo" />
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-md-4">
            <button class="btn btn-primary" @onclick="UpdateCustomer">Update</button>
        </div>
    </div>
}
else
{
    <p>Customer not found.</p>
}

@code {
    private Customer customer;

    [Parameter]
    public int CustomerId { get; set; }

    protected override void OnInitialized()
    {
        customer = CustomerService.GetCustomerById(CustomerId);
    }

    private void UpdateCustomer()
    {
        // Implement logic to update customer details
        Console.WriteLine($"Updating customer: {customer.CustomerName}");
        // CustomerService.UpdateCustomer(customer); // Uncomment and implement this method in the service
        NavigationManager.NavigateTo("/CustomerList");
    }
}
